<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BloodPressurePulseTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BloodPressurePulseTracker.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="Login"
                  ContentTemplate="{DataTemplate local:LoginPage}"
                  Icon="login">
    </ShellContent>

    <TabBar Route="Main">
        <ShellContent Title="Log" Icon="bloodpressure.png" Route="LogReading" ContentTemplate="{DataTemplate local:LogReadingPage}" />
        <ShellContent Title="Trends" Icon="trends.png" Route="Trends" ContentTemplate="{DataTemplate local:TrendsPage}" />
        <ShellContent Title="History" Icon="history.png" Route="History" ContentTemplate="{DataTemplate local:HistoryPage}" />
    </TabBar>
</Shell>
